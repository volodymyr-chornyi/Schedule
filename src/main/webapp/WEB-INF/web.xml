<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>EventListServlet</servlet-name>
        <servlet-class>com.softserveacademy.servlet.EventListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventListServlet</servlet-name>
        <url-pattern>/eventlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventController</servlet-name>
        <servlet-class>com.softserveacademy.servlet.EventController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventController</servlet-name>
        <url-pattern>/event</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherListServlet</servlet-name>
        <servlet-class>com.softserveacademy.servlet.TeacherListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherListServlet</servlet-name>
        <url-pattern>/teacherlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TeacherController</servlet-name>
        <servlet-class>com.softserveacademy.servlet.TeacherController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherController</servlet-name>
        <url-pattern>/teacher</url-pattern>
    </servlet-mapping>
    <servlet>

        <servlet-name>SubjectListServlet</servlet-name>
        <servlet-class>com.softserveacademy.servlet.SubjectListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubjectListServlet</servlet-name>
        <url-pattern>/subjectlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubjectController</servlet-name>
        <servlet-class>com.softserveacademy.servlet.SubjectController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubjectController</servlet-name>
        <url-pattern>/subject</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GroupListServlet</servlet-name>
        <servlet-class>com.softserveacademy.servlet.GroupListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupListServlet</servlet-name>
        <url-pattern>/grouplist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GroupController</servlet-name>
        <servlet-class>com.softserveacademy.servlet.GroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupController</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoomListServlet</servlet-name>
        <servlet-class>com.softserveacademy.servlet.RoomListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomListServlet</servlet-name>
        <url-pattern>/roomlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RoomController</servlet-name>
        <servlet-class>com.softserveacademy.servlet.RoomController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomController</servlet-name>
        <url-pattern>/room</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>teacherMain</servlet-name>
        <jsp-file>/WEB-INF/views/teacherMain.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherMain</servlet-name>
        <url-pattern>/teachermain</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>subjectMain</servlet-name>
        <jsp-file>/WEB-INF/views/subjectMain.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>subjectMain</servlet-name>
        <url-pattern>/subjectmain</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>groupMain</servlet-name>
        <jsp-file>/WEB-INF/views/groupMain.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>groupMain</servlet-name>
        <url-pattern>/groupmain</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>roomMain</servlet-name>
        <jsp-file>/WEB-INF/views/roomMain.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>roomMain</servlet-name>
        <url-pattern>/roommain</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>eventMain</servlet-name>
        <jsp-file>/WEB-INF/views/eventMain.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>eventMain</servlet-name>
        <url-pattern>/eventmain</url-pattern>
    </servlet-mapping>

</web-app>